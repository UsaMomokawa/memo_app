<link rel="stylesheet" href="../../style.css">

<header class="header">
  <h1><a href="/" class="header__title">百川うさのメモアプリ</a></h1>
</header>

<div class="container">
  <form action="/memos/<%= params["id"] %>/edit" method="POST">
    <div class="form-item">
      <label class="form-item__label">タイトル</label>
      <input type="text" name="title" class="form-item__text-input" value="<%= @memo["title"] %>">
    </div>

    <div class="form-item">
      <label class="form-item__label">内容</label>
      <textarea name="content" class="form-item__textarea"><%= @memo["content"] %></textarea>
    </div>

    <input type="hidden" name="_method" value="PATCH" >
    <input type="submit" class="btn" value="保存">
  </form>
</div>
